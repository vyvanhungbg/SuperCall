<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="avatar"
            type="String" />
        <variable
            name="name"
            type="String" />

        <variable
            name="phoneNumber"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/_12sdp"
            loadImageWithDefault="@{avatar}"
            tools:src="@drawable/avatar_5" />

        <TextView
            android:id="@+id/image_view_first_name"
            style="@style/Maven_bold_700_16sdp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:maxLength="2"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/white"
            setNickName="@{name}"
            app:layout_constraintEnd_toEndOf="@id/image_avatar"
            app:layout_constraintStart_toStartOf="@id/image_avatar"
            app:layout_constraintTop_toTopOf="@id/image_avatar"
            app:layout_constraintBottom_toBottomOf="@id/image_avatar"
            tools:text="SM" />
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_avatar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view_name"
                style="@style/Maven_semi_bold_600_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@{name}"
                tools:text="Name" />

            <TextView
                android:id="@+id/text_view_number_phone"
                style="@style/Maven_semi_bold_600_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@{phoneNumber}"
                tools:text="+039284" />
        </LinearLayout>
        <View
            app:layout_constraintStart_toStartOf="@id/layout_content"
            app:layout_constraintEnd_toEndOf="@id/layout_content"
            app:layout_constraintTop_toBottomOf="@id/image_avatar"
            android:layout_width="0dp"
            android:alpha="0.5"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_height="0.5dp"
            android:background="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>